@model UserCodeCaptureViewModel

<div class="page-anonnymous-code">
    <div class="lead">
        <h1>User Code</h1>
        <p>Please enter the code sent to you via @Model.Transport</p>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-sm-6">
            <form asp-action="UserCodeCapture">
                <div class="form-group" hidden>
                    <input class="form-control" for="verificationCode" name="verificationCode" value="@Model.VerificationCode" />
                </div>
                <div class="form-group">
                    <label for="userCode">User Code:</label>
                    <input class="form-control" for="userCode" name="userCode" autofocus />
                </div>

                <button class="btn btn-primary" name="button">Submit</button>
            </form>
        </div>
    </div>
</div>
